<%= form_with model: book do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body, value: "Description" %><br>
    <%= form.text_area :body, size: "100x20" %>
    <% book.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['ongoing', 'completed', 'archived'], selected: 'ongoing' %>
  </div>

  <div>
    <%= form.label :picture, value: "Upload your file" %><br>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<p> <%= link_to "Cancel", root_path %> </p>