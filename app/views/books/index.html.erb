<h1>List of books</h1>

<% @books.in_groups_of(3) do |group| %>
  <div class="row">
  <% group.compact.each do |book| %>
    <% unless book.archived? %>
    <div class="col-md-4">
      <%= image_tag book.picture_url, width: '40%' if book.picture.present? %>
      <h6> <%= link_to book.title, book %></h6>
    </div>
    <% end %>
  <% end %>
  </div>
<% end %>

